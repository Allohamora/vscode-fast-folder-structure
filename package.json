{
  "name": "vscode-fast-folder-structure",
  "displayName": "Fast Folder Structure (FFS)",
  "description": "template folder structures and file templates and apply them easily",
  "repository": {
    "type": "git",
    "url": "https://github.com/Huuums/vscode-fast-folder-structure"
  },
  "keywords": [
    "Folder Creator",
    "File templates",
    "Folder Templates",
    "template",
    "ffs",
    "scaffolding",
    "Create Directories",
    "Productivity"
  ],
  "version": "1.1.0",
  "publisher": "Huuums",
  "engines": {
    "vscode": "^1.37.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:FFS.createFolderStructure",
    "onCommand:FFS.createTemplateFromFolder",
    "onCommand:FFS.removeTemplate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "FFS.createFolderStructure",
        "title": "FFS: Create new Folder from template"
      },
      {
        "command": "FFS.createTemplateFromFolder",
        "title": "FFS: Create Template from this folder"
      },
      {
        "command": "FFS.removeTemplate",
        "title": "FFS: Remove Template"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "FFS.createFolderStructure",
          "group": "2_workspace@500"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "FFS.createTemplateFromFolder",
          "group": "2_workspace@400"
        }
      ]
    },
    "configuration": {
      "title": "VS-Code Fast Folder Structure",
      "properties": {
        "fastFolderStructure.structures": {
          "type": "array",
          "scope": "window",
          "default": [
            {
              "name": "TS React Functional Component",
              "structure": [
                {
                  "fileName": "<FFSName>.tsx",
                  "template": "TS React Functional Component"
                },
                {
                  "fileName": "<FFSName>.css"
                },
                {
                  "fileName": "/__tests__/<FFSName>.test.ts"
                },
                {
                  "fileName": "index.ts",
                  "template": "Indexfile Import/Export"
                }
              ]
            },
            {
              "name": "JS React Functional Component",
              "structure": [
                {
                  "fileName": "<FFSName>.jsx",
                  "template": "JS React Functional Component"
                },
                {
                  "fileName": "<FFSName>.css"
                },
                {
                  "fileName": "/__tests__/<FFSName>.test.js"
                },
                {
                  "fileName": "index.js",
                  "template": "Indexfile Import/Export"
                }
              ]
            }
          ],
          "description": "Configure as many structures as you would like."
        },
        "fastFolderStructure.fileTemplates": {
          "type": "object",
          "scope": "window",
          "default": {
            "TS React Functional Component": [
              "import React from 'react';",
              "import './<FFSName>.css'",
              "",
              "interface <FFSName>Props {",
              "}",
              "",
              "const <FFSName> = (props: <FFSName>Props) => {",
              "  return <div/>;",
              "};",
              "",
              "export default <FFSName>;"
            ],
            "Indexfile Import/Export": [
              "import <FFSName> from './<FFSName>'",
              "",
              "export default <FFSName>;"
            ],
            "JS React Functional Component": [
              "import React from 'react';",
              "import './<FFSName>.css'",
              "",
              "",
              "const <FFSName> = (props) => {",
              "  return <div/>;",
              "};",
              "",
              "export default <FFSName>;"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/chai-fs": "^2.0.2",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^13.1.8",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.3",
    "@types/vscode": "^1.37.0",
    "chai": "^4.2.0",
    "chai-fs": "^2.0.0",
    "glob": "^7.1.4",
    "mocha": "^8.0.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.0",
    "sinon-chai": "^3.5.0",
    "tslint": "^6.0.0",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "@types/html-tags": "^3.0.1",
    "html-tags": "^3.1.0"
  }
}
